<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <servlet>
    <servlet-name>DB-Servlet</servlet-name>
    <servlet-class>org.neo4j.server.web.WarNeoServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>org.neo4j.server.rest.web</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
      <param-value>org.neo4j.server.rest.web.AllowAjaxFilter</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>ADMIN-Servlet</servlet-name>
    <servlet-class>org.neo4j.server.web.WarNeoServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>org.neo4j.server.webadmin.rest</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
      <param-value>org.neo4j.server.rest.web.AllowAjaxFilter</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>DB-Servlet</servlet-name>
    <url-pattern>/db/data/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ADMIN-Servlet</servlet-name>
    <url-pattern>/db/manage/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ADMIN-Servlet</servlet-name>
    <url-pattern>/db/manage</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>org.neo4j.server.web.ContextListener</listener-class>
  </listener>

  <filter>
    <filter-name>Security-Filter</filter-name>
    <filter-class>org.neo4j.server.web.SecurityFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Security-Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
